{
  "name": "typescript-nodejs-sample",
  "version": "1.0.0",
  "description": "TypeScript NodeJS sample application",
  "main": "index.js",
  "dependencies": {
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "mongoose": "^5.0.5",
    "morgan": "^1.9.0",
    "socket.io": "^2.0.4",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.2",
    "@types/mongodb": "^3.0.5",
    "@types/mongoose": "^5.0.2",
    "@types/morgan": "^1.7.35",
    "@types/socket.io": "^1.4.31",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "concurrently": "^3.5.1",
    "jest": "^22.3.0",
    "nodemon": "^1.14.12",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DmitriyNoa/typescript-nodejs-sample"
  },
  "scripts": {
    "start": "node ./dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "serve": "nodemon ./dist/app.js",
    "start_local": "npm run build && npm run watch",
    "watch-ts": "tsc -w",
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run tslint",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --forceExit"
  },
  "author": {
    "name": "DmitriyNoa",
    "email": "dmytro.zharkov@gmail.com"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "license": "MIT"
}
